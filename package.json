{
  "name": "otter-editor",
  "description": "Content editor with declaratively defined content blocks.",
  "version": "0.0.53",
  "author": "Ben Hallstein <ben@ben.am> (https://ben.am/)",
  "license": "SEE LICENSE IN LICENSE.md",
  "homepage": "https://github.com/bhallstein/otter",
  "repository": {
    "type": "git",
    "url": "https://github.com/bhallstein/otter.git"
  },
  "files": [
    "README.md",
    "LICENSE.md",
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "demo": "parcel demo/index.html",
    "clean": "rm -rf dist && rm -rf demo/dist",
    "build": "npm run clean && parcel build --no-source-maps demo/index.html",
    "build--npm": "npm run build && cp -R dist/*.css dist/otter.css && babel src/index.js -d dist && babel src/core -d dist/core",
    "prepublishOnly": "npm run build--npm",
    "dev--plugin": "babel -w src/index.js -d otter-plugin/dev/deps/otter-editor & babel -w src/core -d otter-plugin/dev/deps/otter-editor/core",
    "t": "ava -c 1 --verbose src/test/*",
    "tw": "ava -c 1 --watch src/test/*",
    "ts": "ava -c 1 --watch",
    "test": "npm run t",
    "i": "rm -rf node_modules && npm install"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "bulma": "^0.9.1",
    "react-beautiful-dnd": "^13.0.0",
    "react-quill": "^1.3.5",
    "react-toggle": "^4.1.1"
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/register": "^7.12.1",
    "ava": "^3.13.0",
    "browser-env": "^3.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "parcel": "^1.12.4",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "sinon": "^9.2.0"
  },
  "ava": {
    "babel": true,
    "require": [
      "@babel/register",
      "./src/test/_browser-setup.js"
    ]
  },
  "peerDependencies": {
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "//dependency_licenses": {
    "NOTE!": "Please keep these up to date :)",
    "@fortawesome/fontawesome-svg-core": "MIT",
    "@fortawesome/free-solid-svg-icons": "CC BY 4.0 (applied to SVG icons)",
    "@fortawesome/react-fontawesome": "MIT",
    "bulma": "MIT",
    "react": "MIT",
    "react-beautiful-dnd": "Apache-2.0",
    "react-dom": "MIT",
    "react-quill": "MIT"
  }
}
